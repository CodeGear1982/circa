
-- Test a method that modifies the object contents
type Object
{
    int a
}

def Object.f(self :rebind) -> Object
    self.a = 5
    return self

o = [3] -> Object
assert(o.a == 3)
o.f()
assert(o.a == 5)

-- Same test, but with a nested object
type Object2
{
    List list
}

def Object2.f(self :rebind) -> Object2
    self.list.append(5)
    return self

o = create(Object2)
assert(o.list == [])
o.f()
assert(o.list == [5])
o.f()
assert(o.list == [5 5])
o.f()
assert(o.list == [5 5 5])

-- Multiple levels of nesting
type T1 { List list }
type T2 { T1 t }
type T3 { T2 t }
type T4 { T3 t }

t = create(T4)
assert(to_string(t) == "{t: {t: {t: {list: []}}}}")
assert(t.t.t.t.list == [])
t.t.t.t.list.append(10)
assert(t.t.t.t.list == [10])
assert(to_string(t) == "{t: {t: {t: {list: [10]}}}}")
