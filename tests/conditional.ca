
x = 0

if (true) {
  x = 1
} else {
  assert(false)
}

assert(x == 1)

if (false) {
  assert(false)
} else {
  x = 2
}

assert(x == 2)
assert(x != 1)

if (true) {
  x = 3
}

assert(x == 3)

if (false) {
  x = 4
  assert(false)
}

assert(x == 3)
assert(x != 4)
assert(true)

if (true)
  x = 5
else
  assert(false)

assert(x == 5)
