
-- Test conditional execution, simple
if true
  print('Simple 1')
end

if false
  print('ERROR!')
end

if (1.0 + 2.0) > 1.0
  print('Complex condition 1')
end

if (1.0 + 2.0) < 1.0
  print('ERROR!')
end

-- Conditional execution with else
if true
  print('Else 1')
else
  print('ERROR!')
end

if false
  print('ERROR!')
else
  print('Else 2')
end

-- Multiline blocks
