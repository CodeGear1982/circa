
block = {
    i = input()
    
    state n = 0
    if i == :inc
        n += 1
    else
        assert(false)

    output(n)
    
}.block

actor = make_actor(block)
assert(actor.call([:inc]) == 1)
assert(actor.call([:inc]) == 2)
assert(actor.call([:inc]) == 3)

assert(errored(actor.call([:die])))

assert(actor.call([:inc]) == 4)
