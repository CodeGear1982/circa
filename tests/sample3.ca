

def fill_rectangle(float x1, float y1, float x2, float y2, int color)
  concat('called fill_rectangle: ', [x1, y1, x2, y2, color] -> to_string) -> print
end

def draw_text(string text, float x, float y, int color)
  concat('called draw_text: ', [text, x, y, color] -> to_string) -> print
end


def draw_popup(float x, float y, List names)
  concat('called draw_popup: ', [x,y,names] -> to_string) -> print
  padding_x = 5
  padding_y = 5.0
  item_height = 15.0
  total_width = 300.0 + padding_x
  total_height = item_height * names.count() + padding_y * 2

  for name in names
      fill_rectangle(x, y, x+total_width, y+total_height, 0)
      draw_text(name, x, y, 0)
  end
end

names = {"Button1", "Button2", "Button3"}
draw_popup(30.0, 30.0, names)
