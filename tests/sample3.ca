
names = {"Button1", "Button2", "Button3"}

function fill-rectangle(float x1, float y1, float x2, float y2, int color)
  concat('called fill-rectangle: ', {x1, y1, x2, y2, color} -> to-string) -> print
end

function draw-popup(float x, float y, List names)
  padding_x = 5.0
  padding_y = 5.0
  item_height = 15.0
  total_width = 300.0 + padding_x
  total_height = item_height * names.count() + padding_y * 2

  fill-rectangle(x, y, x+total_width, y+total_height, 0)

end

draw-popup(30.0, 30.0, names)
