-- Check nested blocks

if (true) {
    if (false) {
        print('Error!')
    } else {
        print('Nested 1')
    }
} else {
    print('Error!')
}

if (false) {
    print('Error!')
} else {
    if (false) {
        print('Error!')
    } else {
        print('Nested 2')
    }
}

if (false) {
    print('Error!')
} else {
    if (true) {
        print('Nested 3')
    } else {
        print('Error!')
    }
}

if (true)
    if (false)
        print('Error!')
    else
        print('Nested 4')
else
    print('Error!')

if (false)
    print('Error!')
else
    if (true)
        print('Nested 5')
    else
        print('Error!')
    
if (false)
    print('Error!')
else
    if (true)
        if (false)
            print('Error!')
        else
            if (false)
                print('Error!')
            else
                if (true)
                    print('Nested 6')
                else
                    print('Error!')
    else
        print('Error!')
    

