
type Button {
    String label
    any action
    Rect rect
    bool rollover
    bool press
    bool triggered
    bool toggled
}

type ButtonBar {
    List buttons
}

def ButtonBar.setToggled(@b, int index, bool toggle)
    b.buttons[index].toggled = toggle

