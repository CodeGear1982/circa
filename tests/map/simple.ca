

-- ints as keys
m = make(Map)

@m.set(3,3)
@m.set(4,4)
assert(to_string(m) == '{3: 3, 4: 4}')

-- references as keys
a = 1, b = 2
ra = term_ref(a)
rb = term_ref(b)

m = make(Map)
@m.set(ra, 'a')
@m.set(rb, 'b')
assert(m.get(ra) == 'a')
assert(m.get(rb) == 'b')
m.remove(ra)
assert(m.get(rb) == 'b')

-- Lists as keys
m = make(Map)
@m.set([0], 1)
@m.set([0 0], 2)
@m.set([0 0 0], 3)
@m.set([0 0 0 0], 4)
assert(m.get([0]) == 1)
assert(m.get([0 0]) == 2)
assert(m.get([0 0 0]) == 3)
assert(m.get([0 0 0 0]) == 4)

-- Insert pairs
m = make(Map)
@m.insertPairs([[0 1] [1 2] [2 3]])
assert(m.get(0) == 1)
assert(m.get(1) == 2)
assert(m.get(2) == 3)
