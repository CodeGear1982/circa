end


-- modify an outside value
x = 10.0
for i in range(3)
  x += 2.0
end
print('should be 16.0: ' x)

-- if statement inside a for loop
for i in range(5)
  if i == 3
    print('if passed')
  end
end

-- for loop inside an if statement
if true
   for i in [1]
      print('if2 passed')
   end
end


-- for loop inside a function
def look_for_3(List numbers)
  for i in numbers
    if i == 3
      print("inside function passed")
    end
  end
end

look_for_3([1,2,3,4,5])
