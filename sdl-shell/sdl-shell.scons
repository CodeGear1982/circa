import commands

env = Environment()

#env.Append(CPPFLAGS = ['-ggdb'])


# include SDL
SDL_cflags = commands.getoutput("sdl-config --cflags")
cpp_flags = SDL_cflags
env.Append(CFLAGS = SDL_cflags)
env.Append(LINKFLAGS = commands.getoutput("sdl-config --libs"))
env.Append(LIBS = ['SDL_gfx'])

# include circa lib
env.Append(CPPPATH = '../src')
env.Append(LIBPATH = ['../lib'])
env.Append(LIBS = ['circa'])

cppflags = SDL_cflags + " -ggdb"
env.Append(CPPFLAGS = cppflags)

env.Program('SDLTest', 'SDLTest.c')
env.Program('sdl-shell', 'main.cpp')
