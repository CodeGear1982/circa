def declared_state(state any val, Type t, Closure initializer) -> any
    if val != null
        -- Try to cast to the desired type
        val, cast_success = cast(val, t)

        if cast_success
            return val

    -- Cast failed. Try to use the initializer.
    if initializer != null
        return initializer.call()

    -- No initializer. Use the type's default value.
    return make(t)

def changed(any current) -> bool
    state any prev = null
    result = prev != current
    prev = current
    return result

def first_symbol(any val) -> Symbol
    if type(val) == Symbol
        val
    elif type(val) == List
        if length(val) > 0
            first_symbol(val[0])

