# Metaprogramming functions
function token(str -> Token) :builtin
attribute operator(Token -> Function)

# Operators
operator(token('+')) := add
operator(token('-')) := sub
operator(token('*')) := mult
operator(token('/')) := div
operator(token('==')) := equals
operator(token('!=')) := not_equals

